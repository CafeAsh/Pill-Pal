<MyButton@Button>:
	background_normal: ""
	background_color: 0,0,0,0
	color: 1, 1, 1, 1
	size_hint_y: None
	height: dp(50)
	font_size: '20sp'
	
	canvas.before:
		Color: 
			rgba: (0.035, 0.365, 0.494, 1)
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [10,]
	
<ColoredScreen@Screen>:
	canvas.before:
		Color:
			rgba: 0.945, 0.976, 1,1
		Rectangle:
			pos: self.pos
			size: self.size
			
<MyLabel@Label>:
	text: "default"
	color: 0,0,0,1
	font_size: '20sp'
	halign: "center"
	valign: "middle"
	text_size: self.size
	size_hint_y: None
	height: dp(60)
			
	canvas.before:
		Color:
			rgba: 0.8,0.925,0.933,1
		Rectangle:
			pos: self.pos
			size: self.size
			
<ClockLabel>:
	text: root.time_text
	canvas.before:
		Color:
			rgba: 0.8,0.925,0.933,1
		Rectangle:
			pos: self.pos
			size: self.size
			
<DemoButton@MyButton>
	height: dp(80)
			
<CustomSpinnerOption@SpinnerOption>:
	background_normal:""
	background_color: 0.9,0.9,0.9,1
	color: 0,0,0,1
	font_size: '16sp'
			
<PillRow@BoxLayout>
	orientation: 'horizontal'
	size_hint_y: None
	height: dp(40)
	spacing: dp(10)
	
	Spinner:
		id: pill_spinner
		text: root.pill_type
		background_color: 0.8,0.925,0.933,1
		background_normal:""
		color: 0,0,0,1
		font_size: '20sp'
		option_cls: "CustomSpinnerOption"
		values: ["Tylenol", "MultiVitamin", "Iron", "Aleve", "Allertec", "Cordyceps", "Caffeine", "Zinc"]
		on_text: root.pill_type = self.text
		
	MyButton: 
		text: "-"
		size_hint: None, 1
		width: dp(40)
		on_press: root.decrement()
	
	Label:
		id: pill_qty
		text: str(root.quantity)
		size_hint_x: None
		width: dp(30)
		halign: "center"
		valign: "middle"
		font_size: '20sp'
		color: 0,0,0,1
		
	MyButton:
		text: "+"
		size_hint: None, 1
		width: dp(40)
		on_press: root.increment()

<MainScreen>:
	BoxLayout: 
		orientation:'vertical'
		size_hint: 1,1
		
		ClockLabel:
		
		GridLayout:
			cols: 1
			rows: 3
			spacing: dp(20)
			padding: dp(20)
			height: self.minimum_height
			size_hint: 0.6, 0.8
			pos_hint: {"center_y": 0.5, "center_x": 0.5}
			
			
			MyButton:
				text: "History"
				size_hint: 1,1
				on_press: root.to_history()
			
			MyButton:
				text: "Edit Doses"
				size_hint: 1,1
				on_press: root.to_dose_mgr()
				
			MyButton:
				text: "Start Demo"
				size_hint: 1,1
				on_press: root.start_demo()
				
				canvas.before:
					Color:
						rgba: 0.078, 0.588, 0.498, 1
					RoundedRectangle:
						pos: self.pos
						size: self.size
						radius: [10,]
			
<ChooseDoseScreen>:
	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		
		BoxLayout:
			orientation: 'vertical'
			spacing: dp(20)
			padding: dp(20)
			height: self.minimum_height
			size_hint_y: None
			
			MyButton:
				text: "BACK"
				size_hint: 0.1,None
				font_size: '15sp'
				pos_hint: {"center_y": 0.9, "center_x": 0.05} 
				height: self.width
				on_press: root.back()
				
			BoxLayout:
				id: dose_choice_container
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
				spacing: dp(20)
				padding: dp(20)
			
<DoseDemoScreen>:
	BoxLayout:
		id: demo_layout
		orientation: 'vertical'
		spacing: dp(20)
		padding: dp(20)
		
		Label:
			id: banner
			text: "default"
			color: 0,0,0,1
			font_size: '20sp'
			halign: "center"
			valign: "middle"
			text_size: self.size
			
			canvas.before:
				Color:
					id: banner_color
					rgba: 0.8,0.925,0.933,1
				RoundedRectangle:
					pos: self.pos
					size: self.size
					radius: [40,]
					
		DemoButton:
			text: "VERIFY"
			on_press: root.verify()
			
<HistoryScreen>:
	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		
		BoxLayout:
			orientation: 'vertical'
			spacing: dp(20)
			padding: dp(20)
			size_hint_y: None
			height: self.minimum_height
			
			MyButton:
				text: "BACK"
				size_hint: 0.1,None
				font_size: '15sp'
				pos_hint: {"center_y": 0.9, "center_x": 0.05} 
				height: self.width
				on_press: root.back()
			
			BoxLayout:
				id: label_container
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
				spacing: dp(20)
				padding: dp(20)
				
				MyButton:
					text: "Reset History"
					size_hint_y: None
					height: dp(50)			
					background_color: 1,0.41,0.35,1
					on_press: root.reset_history()

				
<DoseMgrScreen>
	ScrollView:
		id: scrollview
		do_scroll_x: False
		do_scroll_y: True
		
		BoxLayout:
			orientation: 'vertical'
			spacing: dp(20)
			padding: dp(20)
			size_hint_y: None
			height: self.minimum_height
			
			MyButton:
				text: "BACK"
				size_hint: 0.1,None
				font_size: '15sp'
				pos_hint: {"center_y": 0.9, "center_x": 0.05} 
				height: self.width
				on_press: root.back()
			
			BoxLayout:
				id: dose_container
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
				spacing: dp(20)
				padding: dp(20)
				
				MyButton:
					text: "+"
					background_color: 0.078, 0.588, 0.498, 1
					on_press: root.add_dose()
					height: dp(50)
				
				MyButton:
					text: "RESET ALL DOSES"
					size_hint_y: None
					height: dp(50)			
					background_color: 1,0.41,0.35,1
					on_press: root.reset_doses()
<EditDoseScreen>
	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		
		BoxLayout:
			orientation: 'vertical'
			spacing: dp(20)
			padding: dp(20)
			size_hint_y: None
			height: self.minimum_height
			
			MyButton:
				text: "BACK"
				size_hint: 0.1,None
				font_size: '15sp'
				pos_hint: {"center_y": 0.9, "center_x": 0.05} 
				height: self.width
				on_press: root.back()
			
			MyLabel: 
				id: header
				text: "default"
				
			BoxLayout: 
				id: pill_rows
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
				spacing: dp(10)
				
				
			MyButton: 
				text: "+"
				size_hint_y: None				
				background_color: 0.035, 0.365, 0.494
				height: dp(40)
				on_press: root.add_pill_row()
				
			MyButton:
				text: "Save Dose"
				size_hint_y: None
				height: dp(80)			
				background_color: 0.035, 0.365, 0.494
				on_press: root.save_dose()
				
			MyButton:
				text: "DELETE"
				size_hint_y: None
				height: dp(80)			
				background_color: 1,0.41,0.35,1
				on_press: root.delete_dose()
